<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.makemerun"
    android:versionCode="3"
    android:versionName="1.2" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".view.AppTracker"
        android:allowBackup="true"
        android:icon="@drawable/appicon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="br.com.makemerun.view.Splash"
            android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_title" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.makemerun.view.ChooseGoal"
            android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_run_test" >
        </activity>
        <activity
            android:name="br.com.makemerun.view.RunTest"
            android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_run_test" >
        </activity>
        <activity
            android:name="br.com.makemerun.view.StartRun"
            android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_run_test" >
        </activity>
        <activity
            android:name="br.com.makemerun.view.SubgoalsList"
            android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_subgoals" >
        </activity>
        <activity
            android:name="br.com.makemerun.view.PostRun"
            android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_subgoals" >
        </activity>
        <activity
            android:name="br.com.makemerun.view.PostTest"
            android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_subgoals" >
        </activity>
        <activity
            android:name="br.com.makemerun.view.ManualTestInput"
            android:screenOrientation="portrait"
			android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/title_activity_subgoals" >
        </activity>
        <service
            android:name="br.com.makemerun.service.MapService"
            android:label="@string/mappingService" >
        </service>
        <!--Include the AdActivity configChanges and theme. -->
        <activity android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        
        <!--This meta-data tag is required to use Google Play Services.-->
        <meta-data android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />
    </application>
    
</manifest>
